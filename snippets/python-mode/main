# -*- mode: snippet -*-
# name: Main with Arg Parser
# key: pmain
# --
import argparse

def main(args):
    pass

if __name__ == '__main__':
    parser = argparse.ArgumentParser(description='${1:Program description}')
    parser.add_argument('${2:--option}', help='${3:Option description}')
    # Add more parser.add_argument(...) calls here

    args = parser.parse_args()
    main(args)
